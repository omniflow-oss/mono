{
	"name": "omniflowcx-root",
	"private": true,
	"packageManager": "pnpm@9.15.0",
	"scripts": {
		"prepare": "husky install",
		"bootstrap": "./mono bootstrap",
		"dev": "./mono dev --all",
		"check": "./mono check --changed",
		"lint": "./mono lint --changed",
		"test": "./mono test --changed",
		"build": "./mono build --changed",
		"fmt": "./mono fmt --changed",
		"typecheck": "./mono typecheck --changed",
		"doctor": "./mono doctor",
		"list:ports": "./mono list:ports",
		"list:scopes": "./mono list:scopes",
		"contracts:lint": "./mono contracts:lint",
		"contracts:breaking": "./mono contracts:breaking",
		"contracts:build": "./mono contracts:build",
		"docs:lint": "./mono docs:lint",
		"docs:build": "./mono docs:build",
		"docs:serve": "./mono docs:serve",
		"infra:up": "./mono infra:up",
		"infra:down": "./mono infra:down",
		"new:app": "./mono new app",
		"new:service": "./mono new service",
		"new:lib": "./mono new lib",
		"new:package": "./mono new package",
		"tooling:test": "./mono tooling:test",
		"tooling:test:e2e": "./mono tooling:test:e2e"
	},
	"lint-staged": {
		"*.{js,ts,tsx}": ["biome check --write", "biome format --write"],
		"*.java": ["mvn -f back/pom.xml spotless:apply"],
		"contracts/**/*.yaml": [
			"pnpm spectral lint --ruleset contracts/rules/spectral.yaml"
		],
		"contracts/**/*.yml": [
			"pnpm spectral lint --ruleset contracts/rules/spectral.yaml"
		],
		"*.md": ["markdownlint-cli2 --fix"]
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@commitlint/cli": "^19.6.0",
		"@commitlint/config-conventional": "^19.6.0",
		"@redocly/cli": "^1.18.1",
		"@stoplight/spectral-cli": "^6.11.0",
		"husky": "^9.1.7",
		"js-yaml": "^4.1.0",
		"lint-staged": "^15.2.10",
		"markdownlint-cli2": "^0.12.1",
		"openapi-typescript": "^6.7.6",
		"vitepress": "^1.0.0",
		"vitest": "^1.6.0"
	}
}
